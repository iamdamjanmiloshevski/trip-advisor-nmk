<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:elevation="10dp"
                                   android:layout_marginStart="10dp"
                                   android:layout_marginEnd="10dp"
                                   app:cardElevation="10dp"
                                   app:cardMaxElevation="15dp"
                                   app:cardCornerRadius="25dp"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginBottom="10dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:layout_centerHorizontal="true"
                                                      android:id="@+id/iv_landmark_image"/>
        <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:layout_centerHorizontal="true"
                                                     android:layout_below="@id/iv_landmark_image"
                                                     android:textSize="20sp"
                                                     android:textColor="#000"
                                                     android:layout_marginTop="5dp"
                                                     android:layout_marginBottom="5dp"
                                                     android:fontFamily="@font/amiko_bold"
                                                     android:id="@+id/tv_landmark_name"/>
        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:layout_below="@id/tv_landmark_name"
                                                     android:textSize="14sp" android:gravity="start"
                                                     android:padding="5dp"
                                                     android:id="@+id/tv_landmark_text"
        />
        <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:layout_below="@id/tv_landmark_text"
                                                     android:gravity="center"
                                                     android:padding="5dp"
                                                     android:textSize="12sp"
                                                     android:layout_marginEnd="10dp"
                                                     android:layout_marginBottom="10dp"
                                                     android:fontFamily="@font/amiko_semibold"
                                                     android:textColor="@color/flickBlue"
                                                     android:layout_alignParentEnd="true"
                                                     android:text="Read more..."/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>